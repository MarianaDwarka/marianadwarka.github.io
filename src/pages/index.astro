---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout>
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Mariana Carmona</div>
    <div class="text-3xl py-3 font-bold">Data Scientist</div>
    <div class="py-2">
      <text class="text-lg">
        Data Science professional with a solid foundation in Physics and Mathematics, 
        specialized in data analysis and mathematical modeling for strategic decision-making. 
        With programming skills and a focus on process improvement and operational efficiency, 
        I bring an analytical approach to drive growth and business success in multidisciplinary technological environments.
        </text>
    </div>
    <div class="mt-8">
      <a class="btn btn-outline ml-5" href="https://github.com/marianadwarka" target="_blank"> Let's connect!</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
  </div>

  <HorizontalCard
    title="Analysis using Spark"
    img="/projects/sparknotebook.png"
    desc="Data analysis of a satisfaction survey using RDD and PySpark"
    url="https://github.com/MarianaDwarka/Spark"
    badge="Spark"
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="Finance with Python"
    img="/projects/finanzaspython.png"
    desc="An analysis of stock price series from various companies using PCA and portfolio theory, along with Montecarlo and Cholesky"
    url="https://github.com/MarianaDwarka/FinanzasPython"
    badge="Python"
  />

  <div class="divider my-0"></div>

  <HorizontalCard
  title="FlexiTools Web Page"
  img="/projects/flexitools.png"
  desc="Static web page developed in HTML, CSS, an some jQuery"
  url="https://marianadwarka.github.io/Pagina-Presentacion/"
  badge="HTML"
/>

  <div class="divider my-0"></div>
  <HorizontalCard
    title="Snapclear"
    img="https://softr-prod.imgix.net/applications/45f4f664-92a2-4e85-93f4-65f6e8c09a63/assets/7ca09075-9361-49eb-8a52-97974ed2a5cd.webp"
    desc="Remove Image Background Offline for Free with AI "
    url="https://www.snapclear.app/"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
